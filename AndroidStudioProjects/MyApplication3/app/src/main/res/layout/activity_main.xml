<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8a8a8a">
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/music"
            android:scaleType="centerInside"
            android:layout_above="@+id/main_nick_name_text_input"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="#00000000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="用户名"
            android:textSize="20dp"
            android:layout_above="@id/main_help_poistion"
            android:id="@+id/main_nick_name_text_input"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:id="@+id/main_help_poistion"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="密码"
            android:textSize="20dp"
            android:layout_below="@id/main_help_poistion"
            android:id="@+id/main_passwd_text_input"/>
        <LinearLayout
            android:layout_below="@+id/main_passwd_text_input"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <Button
                android:id="@+id/main_register_button"
                android:text="注册"
                android:textStyle="bold"
                android:textColor="#aaaaaa"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/main_login_button"
                android:text="登陆"
                android:textStyle="bold"
                android:textColor="#aaaaaa"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/main_page_progress_bar"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8a8a8a"
        android:id="@+id/main_page_initial_view">
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/music"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="KK-音乐"
            android:gravity="center"
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>