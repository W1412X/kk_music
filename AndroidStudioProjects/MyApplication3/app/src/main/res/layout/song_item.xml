<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:background="@drawable/self_page_long_button"
    android:layout_height="55dp">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text='HAHA'
            android:textSize="16dp"
            android:textColor="#dd8a8a8a"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:singleLine="true"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/song_item_song_name"/>
        <TextView
            android:textColor="#dd8a8a8a"
            android:gravity="center_vertical"
            android:layout_weight="1.75"
            android:layout_marginTop="0dp"
            android:text="HAHA"
            android:textSize="13dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/song_item_song_author"/>
    </LinearLayout>
    <LinearLayout
        android:background="#00000000"
        android:layout_weight="1.4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/song_item_play_button"
            android:src="@drawable/song_item_play"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/circle_transparent_button"
            android:scaleType="centerInside"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/song_item_star_button"
            android:src="@drawable/song_item_star"
            android:padding="7dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/circle_transparent_button"
            android:scaleType="centerInside"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/song_item_add_to_play_list_button"
            android:src="@drawable/add_to_play_list_icon"
            android:layout_width="0dp"
            android:padding="9dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/circle_transparent_button"
            android:scaleType="centerInside"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/song_item_download_button"
            android:src="@drawable/song_item_download"
            android:layout_width="0dp"
            android:padding="9dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/circle_transparent_button"
            android:scaleType="centerInside"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>