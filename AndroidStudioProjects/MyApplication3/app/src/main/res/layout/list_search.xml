<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_above="@+id/list_search_player_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/list_search_total_linearlayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:id="@+id/list_search_search_bar">
            <EditText
                android:layout_weight="@integer/material_motion_duration_short_1"
                android:layout_width="match_parent"
                android:id="@+id/list_search_search_content_input"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/list_search_search_button"
                android:src="@drawable/search"
                android:padding="5dp"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/play"
                android:background="@drawable/circle_transparent_button"
                android:scaleType="centerInside"
                android:layout_weight="@integer/material_motion_duration_long_2"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/song_item_container_linear"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/list_search_player_bar"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/circle_transparent_button"
        android:layout_height="95dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#00000000">
            <LinearLayout
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/search_list_page_play_bar_song_msg_view"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:text="无播放曲目"
                    android:textColor="#8a8a8a"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_margin="1dp"
                    android:background="#00000000"
                    android:src="@drawable/one_song_circle_icon"
                    android:layout_width="55dp"
                    android:padding="12dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/search_page_song_circle_button"/>
                <ImageButton
                    android:layout_margin="1dp"
                    android:background="#00000000"
                    android:src="@drawable/song_list_circle_purple_icon"
                    android:layout_width="55dp"
                    android:padding="12dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/search_page_list_circle_button"/>
                <ImageButton
                    android:layout_margin="1dp"
                    android:background="#00000000"
                    android:src="@drawable/play_list_icon"
                    android:layout_width="55dp"
                    android:padding="14dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/search_page_play_list_button"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>